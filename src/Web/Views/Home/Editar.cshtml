@model CaseTempus.Models.Cliente

@{
    string sucesso = Convert.ToString(ViewData["Sucesso"]);
    string mensagem = Convert.ToString(ViewData["Mensagem"]);
}

<h4>Editar</h4>

<div class="row">
    <div class="col col-md-12">
        <a asp-controller="Home" asp-action="Index" class="btn btn-danger"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
    </div>
</div>

@if (sucesso != "S")
{
    <div class="row justify-content-md-center">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Home" asp-action="Editar" method="POST">
                    <input asp-for="Id" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" value='@Model.Nome' maxlength="150" size="50" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="CPF"></label>
                        <input asp-for="CPF" class="form-control cpf" value='@Model.CPF' minlength="11" maxlength="11" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNascimento"></label>
                        <input asp-for="DataNascimento" type="text" value='@Model.DataNascimento.ToString("dd/MM/yyyy")' class="form-control data" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="RendaFamiliar"></label>
                        <input asp-for="RendaFamiliar" type='text' value='@Model.RendaFamiliar.ToString("0.00")' class="form-control decimal"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Editar"/>
                    </div>
                </form>
            </div>
        </div>    
    </div>
}

<div class="row">
    <div class="col col-md-12">
        @if (sucesso == "S")
        {
            <div class="alert alert-success" role="alert">Edição realizada com sucesso!</div>
        }

        @if (sucesso == "N")
        {
            <div class="alert alert-danger" role="alert">Erro ao editar cadastro: @mensagem</div>
        }
    </div>
</div>